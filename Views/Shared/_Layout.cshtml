    <div id="wrap">
        @{
            if (ViewBag.isIndex == true)
            {
                Html.RenderPartial("HeaderIndex", Model.HeaderViewModel);
            }
            else
            {
                Html.RenderPartial("Header", Model.HeaderViewModel);
            }
        }

        @RenderSection("ContentBody")

        @{Html.RenderPartial("Footer", Model.FooterViewModel);}


    </div>
    @Scripts.Render("~/bundles/mainwebjs")
    @*@Scripts.Render("~/bundles/mainwebjsslide")*@

