@using lengkeng.ViewModels
@model MenuViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section TitleSection{
    Menu - LengKeng.Net.VN
}

@section HeaderSection{

}

@section ContentBody{
    <div id="main-content" class="main-content">
        <div class="page-header">
            <figure class="post-thumbnail">
                <img alt="" src="~/Images/menus.jpg">
            </figure>
            <h1 class="title"><span class="line-title">Menu<i class="fa">&#xf111;</i></span></h1>
        </div>
        <div class="page-content">
            <div id="menus" class="menus">
                <div class="container">
                    <div id="filter" class="filter">
                        @{
                            foreach (var listcat in Model.listItemFollowCategoryViewModel)
                            {
                                <button class="button" style="margin-top:10px;" data-filter=".@listcat.categoryViewModel.Id">@listcat.categoryViewModel.Name</button>
                            }
                        }

                    </div>
                    <div class="menus-inner">
                        @{
                            int count = 0;
                            string data_animate = "";
                            string cssclassPush = "";
                            string cssclassPull = "";
                            foreach (var cat in Model.listItemFollowCategoryViewModel)
                            {
                                if (count % 2 == 0)
                                {
                                    data_animate = "fadeInRight";
                                    cssclassPush = "";
                                    cssclassPull = "";
                                }
                                else
                                {
                                    data_animate = "fadeInLeft";
                                    cssclassPush = "col-sm-push-6";
                                    cssclassPull = "col-sm-pull-6";
                                }
                                count++;
                                <section id="@cat.categoryViewModel.Id" class="section menu-item @cat.categoryViewModel.Id">
                                    <div class="row">
                                        <div class="col-sm-6 @cssclassPush">
                                            <h1 class="title">@cat.categoryViewModel.Name</h1>
                                            <figure class="menu-thumbnail">
                                                <img alt="" src="@cat.categoryViewModel.Thumbnail">
                                            </figure>
                                        </div>
                                        <div class="col-sm-6 @cssclassPull">
                                            <div class="menu-inner">
                                                @{
                                                    int deley = 0;
                                                    foreach (var item in @cat.listItemViewModel)
                                                    {

                                                        <aside class="clearfix animated animation-delay-@deley" data-animate="@data_animate">
                                                            <img class="menu-img" alt="" src="@item.ThumbnailPath">
                                                            <div class="menu-content">
                                                                <h5 class="title menu-title"><span>@item.ItemName</span><span class="menu-price"><i class="fa"></i>@item.Prices VND</span></h5>
                                                                <p>@item.ItemInfo</p>
                                                            </div>
                                                        </aside>
                                                        deley += 15;
                                                    }
                                                }

                                            </div>
                                        </div>

                                    </div>
                                </section>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

}