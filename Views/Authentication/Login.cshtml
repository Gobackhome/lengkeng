@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Register.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">

        <div class="row" id="pwd-container">
            <div class="col-md-4"></div>

            <div class="col-md-4">
                <section class="login-form">
                    <form method="post" action="/Authentication/DoLogin">
                        @Html.AntiForgeryToken()
                        <div class="col-lg-12" style="margin-bottom:25px;">
                            <a href="/Home/Index" ><img src="~/Images/imgs/logo.png" class="img-responsive" alt="" style="margin:0 auto;" /></a>
                        </div>
                        <br />
                        <br />
                        @Html.ValidationMessage("LoginError", new { @class = "has-error" })<br />
                        <br />
                        <input type="text" name="Username" placeholder="Username" required class="form-control input-lg" />

                        <input type="password" class="form-control input-lg" name="Password" placeholder="Password" required />
                        <br />
                        <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Login</button>
                    </form>

                    <div class="form-links">
                        <a href="/Home/Index">Trở về trang chủ</a>
                    </div>
                </section>
            </div>

            <div class="col-md-4"></div>


        </div>



    </div>
</body>
</html>
