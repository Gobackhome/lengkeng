@model IEnumerable<lengkeng.Models.YoutubeHome>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section TitleSection{
    Youtube
}

@section HeaderSection{
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
}

@section ContentBody{
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Tạo mới một Youtube ", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YoutubeId1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleYoutubeId1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YoutubeId2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleYoutubeId2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thumb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YoutubeId1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleYoutubeId1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YoutubeId2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleYoutubeId2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Thumb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDelete)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}